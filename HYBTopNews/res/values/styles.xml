<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="top_update_count_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="top_update_count">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffcc3131</item>
        <item name="android:gravity">center</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>
    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>
    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="left_drawer_item_line">
        <item name="android:background">@color/left_drawer_item_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>
    <style name="left_drawer_item_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/left_drawer_item_bg</item>
        <item name="android:paddingLeft">40.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="left_drawer_item_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/left_drawer_item_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">25.0dip</item>
    </style>
    
    <style name="left_drawer_count" parent="@style/top_update_count">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="profile_drawer_name">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/drawer_text</item>
    </style>
    <style name="right_drawer_top_count" parent="@style/top_update_count">
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="item_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/item_title</item>
    </style>
    <style name="item_secondary_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/ss_comment_time</item>
    </style>
    <style name="item_local">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/item_local</item>
        <item name="android:background">@drawable/list_item_local_bg</item>
    </style>
    
    <style name="item_abstract">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/item_abstract</item>
    </style>
    <style name="item_image">
        <item name="android:background">@drawable/small_image_holder_listpage</item>
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="item_image_gap">
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
     <style name="item_comment_content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/default_text_night</item>
    </style>
    
      <style name="favorite_del_btn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/favorite_delete_btn</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/favorite_btn_delete</item>
    </style>
     
     
</resources>
